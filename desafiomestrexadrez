#include <stdio.h>


 void bispo(int movimento){
if (movimento > 0){
    printf("esquerda > para baixo \n");
    bispo(movimento - 1);
}

 }
 int main() {
    int quantidade;
    printf("### XADREZ FACIL###\n");
    printf("Digite quantas casa o bispo ir√° andar para diagonal:\n");
      scanf("%d", &quantidade);
    bispo(quantidade);
    return 0;
 }





